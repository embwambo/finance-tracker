<% if @user_stocks.any? %>
<table class="table table-striped">
  <thead>
    <tr>
      <th>Symbol</th>
      <th>Name</th>
      <th>Current Price</th>
      <% if @user.id == current_user.id %>
      <th>Action</th>
      <% end %>
    </tr>
  </thead>

  <tbody>
    <% @user_stocks.each do |user_stock| %>
      <tr>
        <td><%= user_stock.ticker %></td>
        <td><%= user_stock.name %></td>
        <td><%= user_stock.price %></td>
        <% if @user.id == current_user.id %>
        <td><%= link_to "Delete", user_stock_path(user_stock), method: :delete,
                data: {confirm: "Are you sure you want to remove this #{user_stock.name} from #{@user.email} account.."},
                class: "btn btn-xs btn-danger" %></td>
      </tr>
      <% end %>
    <% end %>
  </tbody>
</table>
<% end %>
